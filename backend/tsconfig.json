{
  "compilerOptions": {
    "target": "es2016", // Define a versão do JavaScript para a qual o código será compilado
    "module": "commonjs", // Define o sistema de módulos (padrão para Node.js)
    "outDir": "./dist", // Pasta onde o código JavaScript compilado será guardado
    "rootDir": "./src", // Pasta onde o nosso código TypeScript ficará
    "strict": true, // Ativa todas as verificações de tipo rigorosas
    "esModuleInterop": true, // Permite a interoperabilidade entre módulos CommonJS e ES
    "forceConsistentCasingInFileNames": true // Garante que as maiúsculas/minúsculas dos nomes dos ficheiros são consistentes
  }
}